/* pages/comment/index.wxss */
.content{
  border:0px;
  margin: 10rpx;
  font-size: 12px;
  padding: 40rpx;
}

textarea{
  margin: auto;
  width:100%;
  height: 15em;
}

.submit {
  width: 80%;
  background-color: #1c2438;
  color: white;
  margin-top: 50rpx;
}

.currentWordNumber{
  font-size: 28rpx;
  color: gray;
  position: absolute;
  right: 0;
  top: -35rpx;
}

.hint{
   font-size: 28rpx;
   position: absolute;
   bottom: -40rpx;
   left: 0;
   color: #FF6600;
}

.tips{
  color: #FF6600;
  display: flex;
  flex-direction: row;
  justify-content: center;
  flex-wrap: wrap;
  margin-top: 20rpx;
}