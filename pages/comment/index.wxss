/* pages/comment/index.wxss */
.content{
  border:0px;
  margin: 10rpx;
  font-size: 12px;
  padding: 40rpx;
}

textarea{
  margin: auto;
  width:100%;
  height: 15em;
}

.submit {
  width: 80%;
  background-color: #1c2438;
  color: white;
  margin-top: 50rpx;
}

.currentWordNumber{
  font-size: 28rpx;
  color: gray;
  position: absolute;
  right: 0;
  top: -35rpx;
}

.hint{
   font-size: 28rpx;
   position: absolute;
   bottom: -40rpx;
   left: 0;
   color: #FF6600;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.anit{
  width: 100%;
  height: 70rpx;
  position: absolute;
  color: white;
  font-size: 30rpx;
  line-height: 70rpx;
  top: -70rpx;
  text-align: center;
}
.show{
  top: -70rpx;
  animation: show 2s;
  animation-timing-function:ease;
}
@keyframes show
{
  0% {top:-70rpx;}
  10% {top:0rpx;}
  80% {top:0rpx;}
  100% {top:-70rpx;}
}